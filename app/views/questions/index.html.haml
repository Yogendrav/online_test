.table-responsive
  %h1 Listing Questions
  %table.table
    %tr
      %th Category
      %th Question
      %th Question Type
      %th
      %th
      %th
    - @questions.each do |question|
      %tr
        %td= question.question_category
        %td= "#{question.question_name}".html_safe
        %td= "#{question.question_type}".humanize
        %td= link_to 'Show', question, :class => "btn btn-primary"
        %td= link_to 'Edit', edit_question_path(question), :class => "btn btn-primary"
        %td= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary"
  %br/
  = link_to "Add Question", new_question_path, :class => "btn btn-default"